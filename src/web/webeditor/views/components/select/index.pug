style
  include styles.scss

mixin Select({name, id = name, value, title, datas = [], error, required = false, disabled = false})
    div.form_select_container
        label(for=name)= title
        select(id=id name=name required=required disabled=disabled)
          each data in datas
            option(value=data.value selected=value===data.value) #{data.label}
        if error
            p.form_select_error #{error}