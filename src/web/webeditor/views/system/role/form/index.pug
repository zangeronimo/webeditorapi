        div.group
            input(hidden=true id="role_form_id" name="id" value= "")
            +Input({ name: "role_form_name", value: "", title: "Nome", type: "text", })
            +Input({ name: "role_form_label", value: "", title: "Legenda", type: "text", })
        div.group
